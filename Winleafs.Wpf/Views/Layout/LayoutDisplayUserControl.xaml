<UserControl x:Class="Winleafs.Wpf.Views.Layout.LayoutDisplayUserControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:Winleafs.Wpf.Views.Layout"
             mc:Ignorable="d"
             d:DesignHeight="400" d:DesignWidth="400"
             SizeChanged="UserControl_SizeChanged">
    <Grid>
        <Canvas x:Name="CanvasArea" Background="Transparent">

        </Canvas>
        <Button x:Name="RedrawButton" Content="{x:Static local:Resources.Redraw}" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" Width="78" Height="27" Background="{StaticResource NanoleafGreen}" Foreground="White" BorderBrush="{x:Null}" Click="Redraw_Click" Visibility="Hidden"/>
    </Grid>
</UserControl>
